<body>
    <div class="columns">
        <div class="column is-half is-offset-one-quarter">
            <div class="box">
                <div class="content">
                    <h1 class="title is-3 has-text-black">Editar Producto</h1>
                    <%= form_with model: @producto do |form| %>
                    <div>
                        <%= form.label :nombre, class: "label has-text-black" %>
                        <%= form.text_field :nombre, class: "input" %>
                        <% @producto.errors.full_messages_for(:nombre).each do |message| %>
                            <div><%= message %></div>
                        <% end %>
                    </div>

                    <p> </p>

                    

                    <div>
                        <%= form.label :imagen, class: "label has-text-black"  %>
                        <%= form.file_field :imagen, class: "input" %>
                    </div>
                    <p> </p>
                    <label class="label"> Imagen actual: </label>
                    <div class="field">
                        <%= image_tag(@producto.imagen_thumbnail) if @producto.imagen.attached? %>
                    </div>

                    <p> </p>

                    <div>
                        <%= form.label :precio, class: "label has-text-black"  %>
                        <%= form.number_field :precio, class: "input" %>
                        <% @producto.errors.full_messages_for(:precio).each do |message| %>
                            <div><%= message %></div>
                        <% end %>
                    </div>

                    <p> </p>

                    <div>
                        <%= form.label :descripcion, class: "label has-text-black"  %>
                        <%= form.text_area :descripcion, class: "input" %>
                        <% @producto.errors.full_messages_for(:descripcion).each do |message| %>
                            <div><%= message %></div>
                        <% end %>
                    </div>

                    <p> </p>

                    <div>
                        <%= form.label :disponibilidad, class: "label has-text-black"  %>
                        <%= form.number_field :disponibilidad, step: 1%>
                        <% @producto.errors.full_messages_for(:disponibilidad).each do |message| %>
                            <div><%= message %></div>
                        <% end %>
                    </div>

                    <p> </p>

                    <div>
                        <%= form.submit "Guardar producto", class: "button is-link"%>
                    </div>
                    <% end %>
                    
                    <p> </p>
                </div>
            </div>
            <div class="action has-text-right">
                <%= link_to 'Volver', :back, class: "button is-link"%>
            </div>
        </div>
    </div>

</body>