<div class="form-group msg-form">
  <%= form_with(model: [@single_chat ,@mensaje], remote: true, class: "d-flex" ) do |f| %>
    <%= f.text_field :contenido, id: 'chat-text', class: "form-control msg-content", autocomplete: 'off' %>
    <%= f.submit data: { disable_with: false }, class: "btn btn-primary" %>
  <% end %>
</div>