<div class="columns">
    <div class="column is-half is-offset-one-quarter">
        <div class="box">
            <div class="box-content">
                <h1 class="title is-2 has-text-black">Editar Reserva <%= @reserva.id %></h1>
                <p> </p>
                <%= form_with model: [@producto, @reserva] do |form| %>
                <div>
                    <%= form.label :cantidad_productos, "Cantidad solicitada:", class: "label has-text-black" %>
                    <%= form.number_field :cantidad_productos, in: 1..@producto.disponibilidad, step: 1 %>
                    <% @reserva.errors.full_messages_for(:cantidad_productos).each do |message| %>
                    <div><%= message %></div>
                    <% end %>
                </div>
                <p> </p>
                <div>
                    <%= form.label :descripcion, "DescripciÃ³n", class: "label has-text-black" %>
                    <%= form.text_field :descripcion %>
                    <% @reserva.errors.full_messages_for(:descripcion).each do |message| %>
                    <div><%= message %></div>
                    <% end %>
                </div>

                <p> </p>

                <div>
                    <%= form.label :estado, "Estado", class: "label has-text-black" %>
                    <%= form.select :estado, ["Pendiente", "Aceptada", "Rechazada"] %>
                    <% @reserva.errors.full_messages_for(:estado).each do |message| %>
                    <div><%= message %></div>
                    <% end %>
                </div>

                <p> </p>

                <div>
                    <%= form.submit "Guardar reserva", class: "button is-link"%>
                </div>

                <p> </p>

                <% end %>
            </div>
        </div>
        <div class= "action has-text-right">
            <%= link_to 'Volver', :back, class: "button is-link" %>
        </div>
    </div>
</div>