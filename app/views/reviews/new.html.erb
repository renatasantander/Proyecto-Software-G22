<div class="columns">
    <div class="column is-half is-offset-one-quarter">
        <div class="box">
            <div class="box-content">

                <h1 class="title is-1 has-text-black">Deja tu reseña</h1>
                <%= form_with model: [@producto, @review] do |form| %>
                <div>
                    <%= form.label :titulo, "Título", class: "label has-text-black"  %>
                    <%= form.text_field :titulo, class: "input" %>
                    <% @review.errors.full_messages_for(:titulo).each do |message| %>
                    <div><%= message %></div>
                    <% end %>
                    </div>

                <p> </p>

                <div>
                    <%= form.label :calificacion, "Calificación", class: "label has-text-black" %>
                    <%= form.number_field :calificacion, in: 1.0..5.0, step: 0.5 %>
                    <% @review.errors.full_messages_for(:calificacion).each do |message| %>
                    <div><%= message %></div>
                    <% end %>
                    </div>

                <p> </p>

                <div>
                    <%= form.label :contenido, "Contenido", class: "label has-text-black"%>
                    <%= form.text_area :contenido, class: "input" %>
                    <% @review.errors.full_messages_for(:contenido).each do |message| %>
                    <div><%= message %></div>
                    <% end %>
                    </div>

                <p> </p>

                <div>
                    <%= form.submit "Crear reseña", class: "button is-link"%>
                </div>
                <% end %>
                <p> </p>
            </div>
        </div>
        <div class="action has-text-right">
            <%= link_to 'Volver', producto_path(@producto), class: "button is-link" %>
        </div>
    </div>
</div>