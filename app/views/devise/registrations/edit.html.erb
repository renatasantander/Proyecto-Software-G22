<h2 class="title is-1 has-text-centered has-text-black">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
   <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "label has-text-black" %>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "label has-text-black" %> <i>(leave blank if you don't want to change it)</i>
    <div class="control">
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    </div>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "label has-text-black" %>
    <div class="control">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "label has-text-black" %> <i>(we need your current password to confirm your changes)</i>
    <div class="control">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :name, class: "label has-text-black" %>
    <div class="control">
      <%= f.text_field :name, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, class: "label has-text-black" %>
    <div class="control">
      <%= f.text_area :descripcion, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :phone, class: "label has-text-black" %>
    <div class="control">
      <%= f.text_field :telefono, class: "input", pattern: "[0-9]{9}", title: "El número de teléfono debe tener 9 dígitos" %>
    </div>
  </div>

  <div class="field">
    <%= image_tag(resource.image_thumbnail) if resource.image.attached? %>
  </div>

  <div class="field">
    <%= f.label :image, class: "label has-text-black" %>
    <%= f.file_field :image%>
  </div>

  <br>

  <div class="actions has-text-right">
    <%= f.submit "Confirmar", class: "button is-link"%>
    <%= link_to "Volver", root_path, class: "button is-link" %>
  </div>
<% end %>

<div class="container">
  <div class="has-text-centered">
    <h2>Eliminar cuenta: </h2>
  </div>

  <div class="buttons is-centered is-flex-direction-column is-align-items-center">
    <%= button_to "Eliminar cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "button is-danger" %>
  </div>
</div>

